# Thyne Jewels Backend Configuration
# Copy this file to .env and update with your actual values
# IMPORTANT: Never commit .env with real secrets to version control

# ===========================================
# Server Configuration
# ===========================================
PORT=8080
HOST=localhost
# Options: debug, release, test
GIN_MODE=debug

# ===========================================
# Database Configuration
# ===========================================
MONGODB_URI=mongodb://localhost:27017
MONGODB_NAME=thyne_jewels

# ===========================================
# JWT Configuration
# ===========================================
# IMPORTANT: Generate a secure random string for production
# Example: openssl rand -hex 32
JWT_SECRET=CHANGE_THIS_TO_A_SECURE_RANDOM_STRING
JWT_EXPIRY=24h
REFRESH_TOKEN_EXPIRY=168h

# ===========================================
# Payment Gateway (Razorpay)
# ===========================================
# Get these from https://dashboard.razorpay.com/
RAZORPAY_KEY_ID=
RAZORPAY_KEY_SECRET=
RAZORPAY_WEBHOOK_SECRET=

# ===========================================
# AWS S3 Configuration (for image uploads)
# ===========================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_REGION=ap-south-1
AWS_S3_BUCKET=thyne-jewels-images

# ===========================================
# Email Configuration (SMTP)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=
SMTP_PASSWORD=
SMTP_FROM_NAME=Thyne Jewels

# ===========================================
# Firebase Configuration (for push notifications)
# ===========================================
FIREBASE_CREDENTIALS_PATH=
FIREBASE_PROJECT_ID=

# ===========================================
# Application Configuration
# ===========================================
APP_NAME=Thyne Jewels
# Update these URLs for production
APP_URL=http://localhost:8080
FRONTEND_URL=http://localhost:3000
API_VERSION=v1

# ===========================================
# Security Configuration
# ===========================================
BCRYPT_COST=12
RATE_LIMIT_PER_MINUTE=100
# Comma-separated list of allowed origins
CORS_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ===========================================
# File Upload Configuration
# ===========================================
# Max file size in bytes (10MB default)
MAX_FILE_SIZE=10485760
ALLOWED_IMAGE_TYPES=jpg,jpeg,png,webp

# ===========================================
# Guest Session Configuration
# ===========================================
GUEST_SESSION_EXPIRY=720h

# ===========================================
# Tax & Shipping Configuration
# ===========================================
# Tax rate as decimal (0.18 = 18%)
TAX_RATE=0.18
# Minimum order amount for free shipping
FREE_SHIPPING_THRESHOLD=1000
# Shipping cost for orders below threshold
SHIPPING_COST=99

# ===========================================
# Pagination Configuration
# ===========================================
DEFAULT_PAGE_SIZE=20
MAX_PAGE_SIZE=100
